<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context="com.wizard.myapplication.BuildingActivity"
    android:focusableInTouchMode="false"
    android:focusable="false">

    <include layout="@layout/titlebar_other" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/buildingImage"
        android:scaleType="centerCrop" />

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/tabHost"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <include layout="@layout/building_content_page" />

                <include layout="@layout/building_comment_page" />

            </FrameLayout>

        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/commentInput"
            android:layout_gravity="center_horizontal|left"
            android:layout_weight="8"
            android:hint="添加评论" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="发送"
            android:id="@+id/addComment"
            android:layout_gravity="right"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>

