<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ff9966"
    android:weightSum="1">
    <include layout="@layout/titlebar_other"></include>

    <com.wizard.myapplication.view.CircularImage
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/userImage"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unText"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#ff959595"
        android:layout_weight="0.09" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="偏好"
        android:textColor="#ff959595"
        android:textSize="16.0sp"
        android:id="@+id/preText"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="任务"
        android:textColor="#ff959595"
        android:textSize="16.0sp"
        android:id="@+id/taskText"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="成就"
        android:textColor="#ff959595"
        android:textSize="16.0sp"
        android:id="@+id/rankText"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="积分商城"
        android:textColor="#ff959595"
        android:textSize="16.0sp"
        android:id="@+id/exchangeText"
        android:layout_marginBottom="2dp" />


</LinearLayout>