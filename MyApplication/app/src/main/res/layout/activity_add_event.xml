<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wizard.myapplication.AddEventActivity"
    android:orientation="vertical">

    <include layout="@layout/titlebar_other"
        android:id="@+id/include"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/include"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventTitle"
            android:hint="请输入活动主题"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/showDate"
                android:layout_weight="8"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_gravity="center_vertical"
                android:text="2015-01-01"
                android:paddingTop="10dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="选择日期"
                android:id="@+id/pickDate"
                android:layout_weight="4" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/showTime"
                android:layout_weight="8"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_gravity="center_vertical"
                android:text="00:00"
                android:paddingTop="10dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="选择时间"
                android:id="@+id/pickTime"
                android:layout_weight="4" />

        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/eventContent"
            android:hint="请输入活动内容"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_gravity="top" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="确认添加"
            android:id="@+id/addButton" />
    </LinearLayout>


</LinearLayout>
