<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wizard.myapplication.AddEventActivity"
    android:orientation="vertical">

    <include layout="@layout/titlebar_other"
        android:id="@+id/include"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/include"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventTitle"
            android:hint="请输入活动主题"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/eventContent"
            android:hint="请输入活动内容"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_gravity="top"
            android:gravity="top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maxEdit"
            android:hint="请输入最大人数"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="地点："
                android:id="@+id/textView5"
                android:layout_weight="4"
                android:gravity="center_vertical" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/locSpinner"
                android:layout_weight="6" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView3"
                android:layout_weight="4"
                android:text="报名开始：" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/enrollStartDateText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="2015-01-01"
                android:gravity="right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/enrollStartTimeText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_gravity="center_vertical"
                android:text="00:00"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView4"
                android:layout_weight="4"
                android:text="报名截止：" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/enrollEndDateText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="2015-01-01"
                android:gravity="right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/enrollEndTimeText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_gravity="center_vertical"
                android:text="00:00"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView"
                android:layout_weight="4"
                android:text="活动开始：" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/startDateText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="2015-01-01"
                android:gravity="right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/startTimeText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_gravity="center_vertical"
                android:text="00:00"
                android:gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/linearLayout"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView2"
                android:layout_weight="4"
                android:text="活动截止：" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/endDateText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="2015-01-01"
                android:gravity="right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/endTimeText"
                android:layout_weight="3"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_gravity="center_vertical"
                android:text="00:00"
                android:gravity="right" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="确认添加"
            android:id="@+id/addButton"
            android:textColor="#fff"
            android:background="#ff9966"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>


</LinearLayout>
